<h1>Sign In</h1>

<div class="row">
	<div class="col-xs-6 cole-sm-6 col-md-6 col-lg-6 col-xs-offset-3 cole-sm-offset-3 col-md-offset-3 col-lg-offset-3">

		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %><br>

			<%= f.label :password %>
			<%= f.password_field :password %><br>

			<%= f.submit "Sign In", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>

	<div class="row">
		<div class="col-xs-6 cole-sm-6 col-md-6 col-lg-6 col-xs-offset-6 cole-sm-offset-6 col-md-offset-6 col-lg-offset-6" >
			<p>New User? <%= link_to "Sign up Now!", signup_path %> </p>
		</div>
	</div>
</div>





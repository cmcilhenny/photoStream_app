<h1><%= @event.name %></h1>

<p> EVENT DATE: <%= @event.event_date %> </p>

<%= link_to 'Stream Photos', event_photos_path(@event), class: "btn btn-success btn-lg" %><br>

<h3> Your link for Photo Upload: <%= link_to "/events/#{@event.id}/photos/new", new_event_photo_path(@event), class: "btn btn-info" %></h3>

<p><strong> PHOTOS: <%= @event.photos.empty? ? "empty": @event.photos.length %></strong></p>



<%= link_to 'Delete', @event, :method => :delete, :confirm => 'Are you sure?' %><br>
<%= link_to 'Edit', edit_event_path(@event) %><br>





